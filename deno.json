{
  // curl -O https://config.deno.dev/deno.jsonc
  "lint": {
    "files": {
      "include": [],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": [],
      "exclude": []
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "always"
    }
  },
  "tasks": {
    "test":"deno test --allow-all",
    "start": "deno run -A --watch=static/,routes/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }

}
